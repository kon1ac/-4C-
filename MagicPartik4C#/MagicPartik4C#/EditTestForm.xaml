<Window x:Class="MagicPartik4C_.EditTestForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Test" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid Name="testsDataGridView" Grid.Row="0" AutoGenerateColumns="True" Margin="10"/>
        <Button Name="saveButton" Content="Сохранить" Grid.Row="1" Margin="10" Click="saveButton_Click" HorizontalAlignment="Center"/>
    </Grid>
</Window>
