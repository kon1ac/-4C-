<Window x:Class="MagicPartik4C_.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <RadioButton Name="editRadioButton" Content="Редактировать тест" Grid.Row="0" Margin="10"/>
        <RadioButton Name="takeTestRadioButton" Content="Пройти тест" Grid.Row="1" Margin="10"/>
        <TextBox Name="passwordTextBox" Grid.Row="2" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <Button Name="loginButton" Content="Войти" Grid.Row="3" Margin="10" Click="loginButton_Click" HorizontalAlignment="Center"/>
    </Grid>
</Window>
